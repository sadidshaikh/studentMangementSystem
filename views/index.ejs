<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center">Add New Student</h2>
            <form method="post" action="/student">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" autocomplete="off"/>
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input type="text" class="form-control" id="age" name="age" autocomplete="off"/>
                </div>
                <div class="mb-3">
                    <label for="fees" class="form-label">Fees</label>
                    <input type="text" class="form-control" id="fees" name="fees" autocomplete="off"/>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-danger text-center">List of Students</h2>
            <%# Show All Datat %>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Fees</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% let cnt = 1 %>
                    <% data.forEach(({_id, name, age, fees}) => { %>
                        <tr>
                            <td><%= cnt++ %></td>
                            <td><%= name %></td>
                            <td><%= age %></td>
                            <td><%= fees %></td>
                            <td>
                                <form class="d-inline" method="get" action="/student/edit/<%= _id %>">
                                    <button class="btn">
                                        <i class="fas fa-pen-square text-info" style="cursor: pointer;"></i>
                                    </button>
                                </form>
                                <form class="d-inline" method="post" action="/student/delete/<%= _id %>">
                                    <button class="btn">
                                        <i class="fas fa-trash text-danger" style="cursor: pointer;"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>